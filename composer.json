{
    "name": "yiisoft/yii2-app-basic",
    "description": "Yii 2 Basic Project Template",
    "keywords": ["yii2", "framework", "basic", "project template"],
    "homepage": "http://www.yiiframework.com/",
    "type": "project",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/yii2/issues?state=open",
        "forum": "http://www.yiiframework.com/forum/",
        "wiki": "http://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "source": "https://github.com/yiisoft/yii2"
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.2",
        "yiisoft/yii2": "2.0.15",
        "yiisoft/yii2-bootstrap": "~2.0.0",
        "yiisoft/yii2-swiftmailer": "~2.0.0",
        "yiisoft/yii2-authclient": "^2.0.0",
        "yiisoft/yii2-httpclient": "~2.0.0",
        "yiisoft/yii2-mongodb": "~2.1.0",
        "yiisoft/yii2-queue": "~2.0.0",
        "yiisoft/yii2-redis": "~2.0.0",
        "yiisoft/yii2-elasticsearch": "~2.0.0",
        "yiisoft/yii2-jui": "^2.0.0",
        "yiisoft/yii2-imagine": "^2.0.0",
        "bower-asset/icheck": "*",
        "bower-asset/cropper": "*",
        "bower-asset/owl.carousel":"*",
        "bower-asset/slimscroll": "~1.3.3",
        "bower-asset/font-awesome": "^4.0",
        "bower-asset/html5shiv": "^3.0",
        "bower-asset/jquery-slimscroll": "^1.3",
        "bower-asset/flot": "^0.8",
        "bower-asset/animate.css":"*",
        "bower-asset/remarkable-bootstrap-notify": "*",
        "bower-asset/bootstrap-material-design": "4.1.1",
        "bower-asset/jquery-placeholder": "^2.3.0",
        "bower-asset/blueimp-file-upload": "9.18.*",
        "bower-asset/fontawesome": "^4.7.0",
        "bower-asset/bootstrap-markdown": "2.10.*",
        "bower-asset/jquery-timeago": "1.5.*",
        "bower-asset/jquery-nicescroll": "3.6.*",
        "bower-asset/jquery-knob": "1.2.*",
        "bower-asset/select2-bootstrap-theme": "0.1.0-beta.4",
        "bower-asset/jquery.cookie": "^1.4.1",
        "bower-asset/jquery-color": "^2.1.2",
        "bower-asset/autosize": "1.*",
        "bower-asset/nprogress": "*",
        "bower-asset/clipboard.js": "*",
        "bower-asset/jPlayer": "2.9.*",
        "bower-asset/imagesloaded": "*",
        "bower-asset/jquery-timeentry": "^2.0",
        "npm-asset/at.js": "^1.5.1",
        "npm-asset/socket.io-client": "^2.0",
        "bower-asset/caret.js": "0.2.2",
        "google/auth": "^1.0",
        "google/apiclient": "^2.0",
        "google/apiclient-services": "~0.13",
        "lcobucci/jwt": "~3.2",
        "facebook/graph-sdk": "*",
        "facebook/php-ads-sdk": "2.8.*",
        "league/flysystem": "^1.0",
        "cebe/yii2-gravatar": "*",
        "rmrevin/yii2-minify-view": "^1.15",
        "kartik-v/yii2-widgets": "*"
    },
    "require-dev": {
        "codeception/codeception": "~2.3",
        "codeception/specify": "~0.4 || ~1.0",
        "codeception/verify": "~0.4 || ~1.0",
        "codeception/c3": "*",
        "yiisoft/yii2-debug": "~2.0.0",
        "yiisoft/yii2-gii": "~2.0.0",
        "yiisoft/yii2-faker": "~2.0.0",
        "yiisoft/yii2-apidoc": "~2.1.0",
        "jakoch/phantomjs-installer": "2.1.1"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "config": {
        "platform": {
            "php": "7.2"
        },
        "process-timeout": 1800,
        "vendor-dir": "protected/vendor"
    },
    "scripts": {
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject"
        ],
        "post-install-cmd": [
            "PhantomInstaller\\Installer::installPhantomJS",
            "Codeception\\c3\\Installer::copyC3ToRoot",
            "find ./assets/* ! -name '.gitignore' | xargs rm -rf",
            "find ./protected/runtime/* ! -name '.gitignore' | xargs rm -rf"
        ],
        "post-update-cmd": [
            "PhantomInstaller\\Installer::installPhantomJS",
            "Codeception\\c3\\Installer::copyC3ToRoot",
            "find ./web/assets/* ! -name '.gitignore' | xargs rm -rf"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0777",
                    "web/assets": "0777",
                    "yii": "0755"
                }
            ],
            "generateCookieValidationKey": [
                "config/web.php"
            ]
        },
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
